public static int count(int[] a) {
    int N = a.length; //A
    int cnt = 0;
    for (int i = 0; i< N ; i++) { //B
        for (int j = i+1; j < N; j++) { //C
            if (a[i] + a[j] == 0) {
                cnt++; //D
            }
        }
    }
    return cnt;
}

